<?xml version="1.0" encoding="utf-8"?>
<full-backup-content>
    <!-- Include all shared preferences -->
    <include
        domain="sharedpref"
        path="." />
    <!-- Exclude a specific shared preference file -->
    <exclude
        domain="sharedpref"
        path="device.xml" />
    <!-- Include all database files -->
    <include
        domain="database"
        path="." />
    <!-- Include the files directory -->
    <include
        domain="file"
        path="." />
    <!-- Exclude cache files -->
    <exclude
        domain="file"
        path="cache/" />
</full-backup-content>